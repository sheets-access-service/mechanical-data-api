{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  "eslint.workingDirectories": [
    { "pattern": "app/*" },
    { "pattern": "packages/*" }
  ],

  "biome.enable": true,
  "biome.language.typescript.enable": true,
  "biome.language.javascript.enable": true,

  // Optional: Remove formatting conflicts if you're using Prettier or ESLint elsewhere
  "prettier.enable": false,
  "eslint.format.enable": false
}
